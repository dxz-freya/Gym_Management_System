@{
  ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center">
  <div class="login-container p-4 shadow rounded">
    <h2 class="text-center">Login</h2>

    @if (ViewBag.Error != null)
    {
      <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <!-- 本地登录表单 -->
    <form method="post">
      @Html.AntiForgeryToken()
      <div class="form-group d-flex align-items-center mb-3">
        <label class="me-3 mb-0" style="width: 100px;">Username:</label>
        <input type="text" name="username" class="form-control flex-grow-1" required />
      </div>
      <div class="form-group d-flex align-items-center mb-3">
        <label class="me-3 mb-0" style="width: 100px;">Password:</label>
        <input type="password" name="password" class="form-control flex-grow-1" required />
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn custom-btn">Login</button>
        <a href="@Url.Action("Register", "Account")" class="btn custom-link text-decoration-none">Sign Up</a>
      </div>
    </form>

    <hr class="my-3" />

    <!-- Google 登录表单 -->
    <form asp-controller="Account" asp-action="ExternalLogin" method="post">
      @Html.AntiForgeryToken()
      <input type="hidden" name="provider" value="Google" />
      <input type="hidden" name="returnUrl" value="/" />
      <button type="submit" class="btn btn-outline-danger w-100 mt-2">
        <i class="bi bi-google me-2"></i> Login with Google
      </button>
    </form>

  </div>
</div>
