@{
  ViewData["Title"] = "Sign Up";
}

<h2>Sign Up</h2>

@if (ViewBag.Error != null)
{
  <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" class="w-50 mx-auto">
  <div class="form-group d-flex align-items-center mb-3">
    <label class="me-3 mb-0" style="width: 100px;">Username:</label>
    <input type="text" name="username" class="form-control flex-grow-1" required />
  </div>
  <div class="form-group d-flex align-items-center mb-3">
    <label class="me-3 mb-0" style="width: 100px;">Email:</label>
    <input type="text" name="email" class="form-control flex-grow-1" required />
  </div>
  <div class="form-group d-flex align-items-center mb-3">
    <label class="me-3 mb-0" style="width: 100px;">Password:</label>
    <input type="password" name="password" class="form-control flex-grow-1" required />
  </div>
  <div class="d-flex justify-content-between align-items-center">
    <button type="submit" class="btn custom-btn">Sign Up</button>
    <a href="@Url.Action("Login", "Account")" class="btn custom-link text-decoration-none">Login</a>
  </div>
</form>
