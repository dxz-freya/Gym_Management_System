<!-- Edit.cshtml in GymManagement/Views/Book folder-->
@model Book

<div class="d-flex justify-content-center align-items-center">
  <div class="login-container p-4 shadow rounded" style="width: 400px; background-color: #f8f9fa;">
    <h2 class="text-center mb-4">Edit Book</h2>

    <form asp-controller="Book" asp-action="Edit" method="post">
      <input type="hidden" asp-for="BookId" />
      <div class="form-group mb-3 d-flex flex-column">
        <label class="mb-1">Book ID:</label>
        <input class="form-control" value="@Model.BookId" readonly />
      </div>
      <div class="form-group mb-3 d-flex flex-column">
        <label class="mb-1" asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
      </div>
      <div class="form-group mb-3 d-flex flex-column">
        <label class="mb-1" asp-for="AuthorId">Author ID:</label>
        <input asp-for="AuthorId" class="form-control" required />
      </div>
      <div class="form-group mb-3 d-flex flex-column">
        <label class="mb-1" asp-for="LibraryBranchId">Library Branch ID:</label>
        <input asp-for="LibraryBranchId" class="form-control" required />
      </div>
      @* <div class="form-group mb-3 d-flex flex-column">
        <label class="mb-1" asp-for="Quantity">Quantity:</label>
        <input asp-for="Quantity" class="form-control" required min="0" />
      </div> *@
      <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn custom-btn me-3">Save</button>
        <button type="button" class="btn btn-secondary" onclick="window.history.back();">Cancel</button>
      </div>
    </form>
  </div>
</div>
