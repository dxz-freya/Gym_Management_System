@using GymManagement.Models
@using GymManagement.ViewModels
@model GymManagement.Models.Customer
<h2>Your Membership</h2>
<p>Status: <strong>@Model.MembershipStatus</strong></p>
<p>Expires: <strong>@Model.MembershipExpiry?.ToString("yyyy-MM-dd")</strong></p>

@if (Model.MembershipStatus == "Expired")
{
    <form asp-action="RenewMembership" method="post">
        <button type="submit" class="btn btn-success">Renew Now</button>
    </form>
}
