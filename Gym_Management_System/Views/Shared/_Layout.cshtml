        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Section Begin -->
    <div class="offcanvas-menu-wrapper">
        <div class="canvas-close">
            <i class="fa fa-close"></i>
        </div>
        <div class="canvas-search search-switch">
            <i class="fa fa-search"></i>
        </div>
        <nav class="canvas-menu">
            <ul>
                <li><a href="./index.html">Home</a></li>
                <li><a href="./about-us.html">About Us</a></li>
                <li><a href="./classes.html">Classes</a></li>
                <li><a href="./services.html">Services</a></li>
                <li><a href="./team.html">Our Team</a></li>
                <li><a href="#">Pages</a>
                    <ul class="dropdown">
                        <li><a href="./about-us.html">About us</a></li>
                        <li><a href="./class-timetable.html">Classes timetable</a></li>
                        <li><a href="./bmi-calculator.html">Bmi calculate</a></li>
                        <li><a href="./team.html">Our team</a></li>
                        <li><a href="./gallery.html">Gallery</a></li>
                        <li><a href="./blog.html">Our blog</a></li>
                        <li><a href="./404.html">404</a></li>
                    </ul>
                </li>
                <li><a href="./contact.html">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="canvas-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-youtube-play"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu Section End -->

    <!-- Header Begin -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="Gym Logo" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
                            @if (showGuestMenu)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "GymBranch" ? "active" : "")" asp-controller="GymBranch" asp-action="Index">Gym Branches</a>
                                </li>
                            }
                            else
                            {
                                if (User.IsInRole("Trainer"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Dashboard" ? "active" : "")" asp-controller="Trainer" asp-action="Dashboard">Trainer Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "MyGymClasses" ? "active" : "")" asp-controller="Trainer" asp-action="MyGymClasses">My Gym Classes</a>
                                    </li>
                                }
                                else if (User.IsInRole("Receptionist"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Dashboard" ? "active" : "")" asp-controller="Receptionist" asp-action="Dashboard">Receptionist Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "ManageBookings" ? "active" : "")" asp-controller="Receptionist" asp-action="ManageBookings">Bookings</a>
                                    </li>
                                    
                                }
                                else if (User.IsInRole("Customer"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Dashboard" ? "active" : "")" asp-controller="Customer" asp-action="Dashboard">Dashboard</a>
                                    </li>
                                    
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "BookSession" ? "active" : "")" asp-controller="Customer" asp-action="BookSession">Book Session</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Payments" ? "active" : "")" asp-controller="Customer" asp-action="Payments">Payments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Recharge" ? "active" : "")" asp-controller="Customer" asp-action="Recharge">Recharge</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "Membership" ? "active" : "")" asp-controller="Customer" asp-action="Membership">Membership</a>
                                    </li>
                                    
                                    <li class="nav-item">
                                        <a class="nav-link @(currentAction == "TrainerList" ? "active" : "")" asp-controller="Customer" asp-action="TrainerList">Trainer List</a>
                                    </li>
                                }
                            }
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && currentAction == "Contact" ? "active" : "")" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center">
                            @if (isSignedIn)
                            {
                                <a asp-controller="Account" asp-action="ViewProfile" 
                                class="d-flex align-items-center text-white text-decoration-none mr-2" style="margin: 0.2rem;">
                                    <div class="position-relative mr-2">
                                        <img src="@Url.Content("~/uploads/profile/" + (user?.ProfileImageName ?? "default.png"))"
                                            class="rounded-circle mr-1" width="32" height="32" alt="Avatar" />
                                        
                                        @if (isReceptionist)
                                        {
                                            <span id="availability-indicator"
                                                class="position-absolute top-0 start-100 translate-middle p-1 border border-light rounded-circle"
                                                style="background-color: @(((Receptionist)user).IsAvailable ? "#28a745" : "#6c757d"); width:12px; height:12px;">
                                            </span>
                                        }
                                    </div>
                                    <span>@user?.Name</span>
                                </a>

                                <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0.2rem;">
                                    <button class="btn btn-sm btn-outline-light" style="margin: 0.2rem;">Log Out</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-warning" asp-controller="Account" asp-action="Register" style="margin: 0.2rem;">Register</a>
                                <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Login" style="margin: 0.2rem;">Log In</a>
                            }
                            <a class="btn btn-sm btn-warning ms-2"
                            href="@(User.IsInRole("Admin") ? Url.Action("Dashboard", "Admin", new { area = "Admin" }) : Url.Action("AccessDenied", "Account"))">
                                <i class="fa fa-cogs"></i> Admin
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header End -->

    <!-- Main Body -->
    <main role="main" class="mt-0 pt-0">
        @RenderSection("PagePadding", required: false)
        @RenderBody()
    </main>



    <!-- Footer Section -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="fs-about">
                        <div class="fa-logo">
                            <a href="#"><img src="~/img/logo.png" alt=""></a>
                        </div>
                        <p>Welcome to GymManagement. Train with the best.</p>
                        <div class="fa-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-envelope-o"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="fs-widget">
                        <h4>Useful links</h4>
                        <ul>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Classes</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="fs-widget">
                        <h4>Support</h4>
                        <ul>
                            <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                            <li><a href="#">My account</a></li>
                            <li><a href="#">Subscribe</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="fs-widget">
                        <h4>Tips & Guides</h4>
                        <div class="fw-recent">
                            <h6><a href="#">How to stay consistent with training</a></h6>
                            <ul>
                                <li>3 min read</li>
                                <li>12 Comments</li>
                            </ul>
                        </div>
                        <div class="fw-recent">
                            <h6><a href="#">Best beginner workouts</a></h6>
                            <ul>
                                <li>4 min read</li>
                                <li>10 Comments</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="copyright-text">
                        <p>&copy; @DateTime.Now.Year - GymManagement | Built with ❤️ by 6844-Group18</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/masonry.pkgd.min.js"></script>
    <script src="~/js/jquery.barfiller.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btn = document.getElementById("availability-toggle");
            if (!btn) return;

            btn.addEventListener("click", function () {
                const now = btn.dataset.available === "true";
                const next = !now;

                fetch("/Receptionist/ToggleAvailabilityAjax?isAvailable=" + next, {
                    method: "POST",
                    headers: {
                        "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(res => res.json())
                .then(data => {
                    btn.textContent = data.text;
                    btn.className = "btn btn-sm " + data.css;
                    btn.dataset.available = data.available;

                    const dot = document.getElementById("availability-indicator");
                    if (dot) dot.style.backgroundColor = data.available === "true" ? "#28a745" : "#6c757d";
                });
            });
        });
        </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>



