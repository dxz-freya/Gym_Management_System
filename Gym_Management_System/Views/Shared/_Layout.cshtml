<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymManagement.styles.css" asp-append-version="true" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gym
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-heart-pulse" viewBox="0 0 16 16">
                        <path
                            d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053.918 3.995.78 5.323 1.508 7H.43c-2.128-5.697 4.165-8.83 7.394-5.857q.09.083.176.171a3 3 0 0 1 .176-.17c3.23-2.974 9.522.159 7.394 5.856h-1.078c.728-1.677.59-3.005.108-3.947C13.486.878 10.4.28 8.717 2.01zM2.212 10h1.315C4.593 11.183 6.05 12.458 8 13.795c1.949-1.337 3.407-2.612 4.473-3.795h1.315c-1.265 1.566-3.14 3.25-5.788 5-2.648-1.75-4.523-3.434-5.788-5" />
                        <path
                            d="M10.464 3.314a.5.5 0 0 0-.945.049L7.921 8.956 6.464 5.314a.5.5 0 0 0-.88-.091L3.732 8H.5a.5.5 0 0 0 0 1H4a.5.5 0 0 0 .416-.223l1.473-2.209 1.647 4.118a.5.5 0 0 0 .945-.049l1.598-5.593 1.457 3.642A.5.5 0 0 0 12 9h3.5a.5.5 0 0 0 0-1h-3.162z" />
                    </svg>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path == "/" || Context.Request.Path.StartsWithSegments("/Home") ? "active" : "")"
                                asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/GymBranch/Details") ? "active" : "")"
                                asp-controller="GymBranch" asp-action="Index">Gym Branches</a>
                        </li>
                        <!-- Admin -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Admin/ManageGymBranches") ? "active" : "")"
                                    asp-controller="Admin" asp-action="ManageGymBranches">Manage Gym Branches</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Admin/ManageMembers") ? "active" : "")"
                                    asp-controller="Admin" asp-action="ManageMembers">Manage Members</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Admin/ManageSessions") ? "active" : "")"
                                    asp-controller="Admin" asp-action="ManageSessions">Manage Sessions</a>
                            </li>
                        }
                        <!-- Trainer -->
                        @if (User.IsInRole("Trainer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Trainer/Dashboard") ? "active" : "")"
                                    asp-controller="Trainer" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Trainer/ViewSessions") ? "active" : "")"
                                    asp-controller="Trainer" asp-action="ViewSessions">View Sessions</a>
                            </li>
                        }
                        <!-- Receptionist -->
                        @if (User.IsInRole("Receptionist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Receptionist/ManageBookings") ? "active" : "")"
                                    asp-controller="Receptionist" asp-action="ManageBookings">Manage Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Receptionist/CheckIn") ? "active" : "")"
                                    asp-controller="Receptionist" asp-action="CheckIn">Check In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Receptionist/ViewCustomers") ? "active" : "")"
                                    asp-controller="Receptionist" asp-action="ViewCustomers">View Customers</a>
                            </li>
                        }
                        <!-- Customer -->
                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/Customer/Profile") ? "active" : "")"
                                    asp-controller="Customer" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/ClassSchedule/Index") ? "active" : "")"
                                    asp-controller="ClassSchedule" asp-action="Index">Class Schedule</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hello, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-box">
        <div class="container">
            &copy; 2025 - GymManagement - Xinze Du 2092629
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
