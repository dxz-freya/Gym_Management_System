@model GymManagement.ViewModels.SessionFilterBarViewModel

<form method="get" id="filterForm" class="d-flex flex-wrap justify-content-start align-items-center gap-3">
    <!-- Dropdown -->
    <select class="form-select px-4 py-2 rounded-4 border-0 shadow-sm"
            style="background-color: #f5f5f5; min-width: 200px;"
            name="branch"
            onchange="document.getElementById('filterForm').submit()">
        <option value="">All Branches</option>
        @foreach (var branch in Model.Branches)
        {
            <option value="@branch" selected="@(branch == Model.SelectedBranch ? "selected" : null)">
                @branch
            </option>
        }
    </select>

    <!-- Search Bar -->
    <div class="position-relative d-flex align-items-center"
         style="background-color: #f5f5f5; border-radius: 20px; padding-left: 2.5rem; min-width: 280px;">
        <i class="bi bi-search position-absolute" style="left: 1rem; color: #bbb;"></i>
        <input type="text"
               name="search"
               placeholder="Search"
               class="form-control border-0 bg-transparent shadow-none"
               style="padding-left: 0; background-color: transparent;"
               value="@Model.SearchTerm" />
    </div>
</form>